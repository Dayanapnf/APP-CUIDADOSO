<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Edit_Text">
        <!--largura-->
        <item name="android:layout_width">match_parent</item>
        <!--largura-->
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/purple_400</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text_start">
        <!--largura-->
        <item name="android:layout_width">match_parent</item>
        <!--largura-->
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/purple_200</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Edit_Text_forms">
        <!--largura-->
        <item name="android:layout_width">match_parent</item>
        <!--largura-->
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/purple_200</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">235dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/purple_300</item>
    </style>
    <style name="button_start">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/purple_300</item>
    </style>

    <style name="text_tela_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/purple_300</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="text_forms">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/purple_300</item>
    </style>

    <style name="txt_login_google">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="viewBalanco">
        <item name="background">@drawable/view_balanco</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>