<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Edit_Text">
        <!--largura-->
        <item name="android:layout_width">match_parent</item>
        <!--largura-->
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/purple_200</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">235dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="text_tela_cadastro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="viewBalanco">
        <item name="background">@drawable/view_balanco</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>