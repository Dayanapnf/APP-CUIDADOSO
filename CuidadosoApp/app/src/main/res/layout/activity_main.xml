<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"/>


    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:autoPlay="true"
        app:autoPlayDelay="3000"
        app:captionMargin="0dp"
        app:captionTextSize="14sp"
        app:carouselBackground="#00000000"
        app:imagePlaceholder=""
        app:imageScaleType="fitXY"
        app:infiniteCarousel="true"
        app:showCaption="true"
        app:showNavigationButtons="true"
        android:layout_below="@+id/toolbar">

    </org.imaginativeworld.whynotimagecarousel.ImageCarousel>

    <TextView
        android:id="@+id/textBalancoAtividades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_below="@+id/carousel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Balanço de Tarefas"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBalancoAtividades"
        android:orientation="horizontal">

        <View
            style="@style/viewBalanco"
            android:id="@+id/viewTarefasConcluídas"
            android:layout_width="180dp"
            android:layout_height="180dp"
            />

        <View
            android:id="@+id/viewTarefasPendentes"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        tools:ignore="MissingConstraints">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>